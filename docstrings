def greet_user(name):
    '''
    User is greeted

    Parameter:
    name (str): The name that the user inputted

    Returns:
    None
    '''
    print(f"Hello {name}!")

name = input("> ")
greet_user(name)



def square(number):
    '''
    Squares the number

    Parameters:
    number (int or float): The number to be squared

    Returns:
    The square of the input number
    '''
    number = number**2
    return number

number = int(input("> "))
number = square(number)
print(number)

